<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/equityjamiiilogo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/equityjamiiilogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EquityJamii"
        tools:targetApi="32">
        <activity
            android:name=".ui.KaribuActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.EquityJamii" />
        <activity
            android:name=".ui.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".ui.secondActivity"
            android:exported="true"
            android:label="@string/profile"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.EquityJamii.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.MainEquiActivity"
            android:exported="true"
            android:label="@string/title_activity_entre_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EquityJamii.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>