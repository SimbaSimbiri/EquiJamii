<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--data class User(val  profileImage: String, val backGroundImage : String, val name : String, val designation : String, val branch : String)
-->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragContainerSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.canhub.cropper.CropImageView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:id="@+id/myProfileCanCropper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageBackGround"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/equity_bank_new_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        app:cardCornerRadius="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            app:cardCornerRadius="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:src="@drawable/icons8_edit_profile"
                android:clickable="true"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

    <EditText
        android:id="@+id/nameProfile"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo_paaji_2_semibold"
        android:hint="Name"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/designationProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        app:layout_constraintVertical_bias="0.236" />

    <EditText
        android:id="@+id/designationProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif-medium"
        android:hint="Designation"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameProfile"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/branchProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif-medium"
        android:hint="Branch"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/designationProfile"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>