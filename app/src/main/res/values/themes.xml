<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EquityJamii" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:dialogTheme">@style/customDialog</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_dialog_bottom</item>
    </style>



    <style name="Theme.EquityJamii.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EquityJamii.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EquityJamii.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@drawable/shape_dialog_bottom</item>
    </style>

    <style name="titleToolBarFont">
        <item name="android:fontFamily" parent="Widget.AppCompat.Toolbar.Title">@font/baloo</item>
        <item name="android:textSize" parent="Widget.AppCompat.Toolbar.Title">22sp</item>
        <item name="android:textAlignment" parent="Widget.AppCompat.Toolbar.Title">textStart</item>
    </style>

    <style name="titleToolBarFont2">
        <item name="android:fontFamily" parent="Widget.AppCompat.Toolbar.Title">@font/baloo</item>
        <item name="android:textSize" parent="Widget.AppCompat.Toolbar.Title">18sp</item>
        <item name="android:textAlignment" parent="Widget.AppCompat.Toolbar.Title">textStart</item>

    </style>

    <style name="customDialog" parent="Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">12dp</item>
        <item name="android:layout_marginHorizontal">0dp</item>
    </style>

    <style name="titleTab" parent="Widget.Design.TabLayout">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/baloo_paaji_2_semibold</item>
    </style>

    <style name="titleTab2" parent="Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/baloo_paaji_2_semibold</item>
    </style>

    <style name="ThemeOverlay.EquityJamii.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="MyDatePickerStyle">
        <item name="colorAccent">@color/karbBackgrndtint</item>
        <item name="android:dateTextAppearance">@style/titleTab</item>
        <item name="android:textAppearance">@style/titleTab</item>
        <item name="itemTextAppearance">@style/titleTab</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/baloo_paaji_2_semibold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="selectorSize">0dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.EquityJamii" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


</resources>