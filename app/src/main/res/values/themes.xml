<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EquityJamii" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/karbBackgrndtint</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.EquityJamii.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EquityJamii.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EquityJamii.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titleToolBarFont">
        <item name="android:fontFamily" parent="Widget.AppCompat.Toolbar.Title"> @font/baloo</item>
        <item name="android:textSize" parent = "Widget.AppCompat.Toolbar.Title">20sp</item>
        <item name="android:textAlignment"  parent = "Widget.AppCompat.Toolbar.Title">textStart</item>
    </style>

    <style name="titleToolBarFont2">
        <item name="android:fontFamily" parent="Widget.AppCompat.Toolbar.Title">@font/baloo</item>
        <item name="android:textSize" parent = "Widget.AppCompat.Toolbar.Title">18sp</item>
        <item name="android:textAlignment"  parent = "Widget.AppCompat.Toolbar.Title">textStart</item>

    </style>

    <style name="titleTab" parent="Widget.Design.TabLayout">
        <item name="android:textSize"   >13sp</item>
        <item name = "fontFamily">@font/baloo_paaji_2_semibold</item>
    </style>

</resources>